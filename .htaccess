# ============================================
# TMG - PERFORMANCE OPTIMIZATIONS
# Lightning Fast Configuration
# ============================================

# ============================================
# 1. GZIP COMPRESSION (Reduce file sizes by 70%)
# ============================================
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript application/json application/xml
    AddOutputFilterByType DEFLATE application/rss+xml application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # Compress fonts
    AddOutputFilterByType DEFLATE font/ttf font/otf font/woff font/woff2
    
    # Remove browser bugs (optional)
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
</IfModule>

# ============================================
# 2. BROWSER CACHING (Reduce server requests)
# ============================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    
    # Images - Cache for 1 year
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"
    
    # CSS and JavaScript - Cache for 1 year (use versioning)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    
    # Fonts - Cache for 1 year
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML - Cache for 1 hour
    ExpiresByType text/html "access plus 1 hour"
    
    # JSON - Cache for 1 hour
    ExpiresByType application/json "access plus 1 hour"
    
    # PDF - Cache for 1 month
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# ============================================
# 3. CACHE-CONTROL HEADERS
# ============================================
<IfModule mod_headers.c>
    # CSS and JavaScript - 1 year
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Images - 1 year
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Fonts - 1 year
    <FilesMatch "\.(woff2|woff|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # HTML - No cache (always fresh)
    <FilesMatch "\.(html|htm|php)$">
        Header set Cache-Control "no-cache, must-revalidate"
    </FilesMatch>
</IfModule>

# ============================================
# 4. ENABLE KEEP-ALIVE (Faster page loads)
# ============================================
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# ============================================
# 5. DISABLE ETAGS (Reduce overhead)
# ============================================
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# ============================================
# 6. PRELOAD & PREFETCH (Speed up navigation)
# ============================================
<IfModule mod_headers.c>
    # Preload critical resources
    <FilesMatch "\.php$">
        Header add Link "</css/style.css>; rel=preload; as=style"
        Header add Link "</css/homepage.css>; rel=preload; as=style"
        Header add Link "</js/main.js>; rel=preload; as=script"
    </FilesMatch>
</IfModule>

# ============================================
# 7. SECURITY HEADERS (Bonus)
# ============================================
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# ============================================
# 8. PREVENT IMAGE HOTLINKING (Save bandwidth)
# ============================================
<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?yourdomain.com [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [NC,F,L]
</IfModule>

# ============================================
# 9. LIMIT FILE UPLOAD SIZE (Security)
# ============================================
php_value upload_max_filesize 5M
php_value post_max_size 5M
php_value max_execution_time 300
php_value max_input_time 300

# ============================================
# 10. DISABLE DIRECTORY BROWSING (Security)
# ============================================
Options -Indexes

